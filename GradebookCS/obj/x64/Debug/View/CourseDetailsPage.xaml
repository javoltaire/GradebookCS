<Page
    x:Class="GradebookCS.View.CourseDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GradebookCS.View"
    xmlns:usercontrols="using:GradebookCS.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding SelectedCourseViewerViewModel}">
    
    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel x:ConnectionId='1' x:Name="ComponentsListRoot" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Width="350" MaxWidth="350" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
            <Button x:ConnectionId='7' x:Name="AddComponentButton" Foreground="White" Width="{Binding ActualWidth,ElementName=ComponentsListRoot}" Command="{Binding AddNewComponentCommand}">
                <SymbolIcon Symbol="Add"/>
            </Button>
            <ListView x:ConnectionId='8' x:Name="ComponentsListView" SelectedItem="{Binding SelectedComponentViewerViewModel, Mode=TwoWay}" SelectionMode="Single" ItemsSource="{Binding ComponentViewerViewModels}" Width="{Binding ActualWidth, ElementName=ComponentsListRoot}" RelativePanel.Below="AddComponentButton" RelativePanel.AlignBottomWithPanel="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <usercontrols:ComponentViewer Width="{Binding ActualWidth, ElementName=ComponentsListView}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </RelativePanel>
        <RelativePanel  RelativePanel.RightOf="ComponentsListRoot" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
            <TextBlock x:ConnectionId='2' x:Name="CourseAndComponentTextBlock" Text="{Binding CourseAndComponentName}" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
            <usercontrols:ViewOnlyAssignmentViewer x:ConnectionId='3' x:Name="CourseAssignmentViewer" Width="600" Height="30" AssignmentName="Course Grade" AssignmentScore="{Binding Course.Grade.Score}" AssignmentMaximumScore="{Binding Course.Grade.MaximumScore}" AssignmentPercent="{Binding Course.Grade.PercentWithSign}" AssignmentLetter="{Binding Course.Grade.Letter}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="CourseAndComponentTextBlock"/>
            <usercontrols:ViewOnlyAssignmentViewer x:ConnectionId='4' x:Name="ComponentWeightedAssignmentViewer" Width="{Binding ActualWidth, ElementName=CourseAssignmentViewer}" Height="{Binding ActualHeight, ElementName=CourseAssignmentViewer}" AssignmentName="Component Weighted Grade" AssignmentScore="{Binding SelectedComponentViewerViewModel.Component.WeightedGrade.Score}" AssignmentMaximumScore="{Binding SelectedComponentViewerViewModel.Component.WeightedGrade.MaximumScore}" AssignmentPercent="{Binding SelectedComponentViewerViewModel.Component.WeightedGrade.PercentWithSign}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="CourseAssignmentViewer"/>
            <usercontrols:ViewOnlyAssignmentViewer x:ConnectionId='5' x:Name="ComponentTotalAssignmentViewer" Width="{Binding ActualWidth, ElementName=CourseAssignmentViewer}" Height="{Binding ActualHeight, ElementName=CourseAssignmentViewer}" AssignmentName="Component total Grade" AssignmentScore="{Binding SelectedComponentViewerViewModel.Component.TotalGrade.Score}" AssignmentMaximumScore="{Binding SelectedComponentViewerViewModel.Component.TotalGrade.MaximumScore}" AssignmentPercent="{Binding SelectedComponentViewerViewModel.Component.TotalGrade.PercentWithSign}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="ComponentWeightedAssignmentViewer"/>
            <ItemsControl x:ConnectionId='6' x:Name="AssignmentItemsList" ItemsSource="{Binding SelectedComponentViewerViewModel.AssignmentViewerViewModels}" Width="{Binding ActualWidth, ElementName=CourseAssignmentViewer}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="ComponentTotalAssignmentViewer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <usercontrols:AssignmentViewer  Width="{Binding ActualWidth, ElementName=CourseAssignmentViewer}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Command="{Binding AddNewAssignmentCommand}" Width="{Binding ActualWidth, ElementName=CourseAssignmentViewer}" Height="{Binding ActualHeight, ElementName=CourseAssignmentViewer}" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="AssignmentItemsList">
                <SymbolIcon Symbol="Add"/>
            </Button>
        </RelativePanel>


    </RelativePanel>
</Page>

